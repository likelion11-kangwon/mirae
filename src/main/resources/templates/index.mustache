    <script type="application/javascript">
        let delay = 300;
        let timer = null;

        function trackText() {
            document.querySelector("div.track").innerHTML = ""
            for (let step = 0; step < screen.width * 2; step += 82.9167) {
                document.querySelector("div.track").innerHTML += `<span class="track_item">MIRAESEE</span>`
            }
        }
        window.addEventListener('resize', function () {
            clearTimeout(timer);
            document.querySelector("div.track").innerHTML = ""
            timer = setTimeout(function(){
                this.trackText()
            }, delay);

        })
        window.addEventListener('DOMContentLoaded', function () {
            this.trackText()
        })
    </script>
